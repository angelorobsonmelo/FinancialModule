<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="financial" type="br.com.soluevo.financialmodulelibrary.model.Financial"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_spacing_line"
            android:background="@drawable/bg_white_stroke_gray"
            android:orientation="vertical"
            android:padding="@dimen/default_half_margin">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_half_margin"
                android:gravity="center_vertical">

            <ImageView
                    android:id="@+id/icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_money"/>

            <TextView
                    android:id="@+id/type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Cabify"
                    android:text="@{financial.title}"
                    android:layout_marginLeft="@dimen/default_half_margin"
                    android:layout_marginRight="@dimen/default_half_margin"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"/>

            <LinearLayout
                    android:id="@+id/price_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_green"
                    android:padding="@dimen/default_half_margin">

                <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="R$ 50,00"
                        android:text="@{financial.value}"
                        android:textColor="@color/color_white"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/number_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/number_visit_identifier_cell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/small_spacing"
                    android:text="@string/number_identifier"
                    android:textColor="@color/color_blue_dark"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/number_visit_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="123456"
                    android:text="@{financial.number}"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_gray"
                    android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/client_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/first_cell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/small_spacing"
                    android:text="@string/item_notifications_client"
                    android:textColor="@color/color_blue_dark"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/client"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Ã‚ngelo Melo"
                    android:text="@{financial.clientName}"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_gray"
                    android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/small_spacing"
                    android:text="@string/item_notifications_status"
                    android:textColor="@color/color_blue_dark"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Finalizando - Aguardando Gestor"
                    android:text="@{financial.status}"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/payment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/small_spacing"
                    android:text="@string/forma_de_pagamento"
                    android:textColor="@color/color_blue_dark"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Dinheiro"
                    android:text="@{financial.paymentType}"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="22/05/2019 - 18:58"
                    android:text="@{financial.date}"
                    android:ellipsize="end"
                    android:textSize="10sp"
                    android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</layout>